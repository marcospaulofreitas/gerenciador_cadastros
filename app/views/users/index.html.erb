<div class="mb-2">
  <%= link_to webposto_dashboard_path, class: "btn btn-outline-secondary btn-sm" do %>
    <i class="fas fa-arrow-left me-1"></i>Voltar
  <% end %>
</div>

<div class="row justify-content-center mb-3">
  <div class="col-12 col-lg-10 col-xl-9">
    <div class="d-flex justify-content-between align-items-start">
      <h2 class="text-info mb-0">
        <i class="fas fa-users me-2"></i>Gerenciar Usuários
      </h2>
      <%= link_to new_user_path, class: "btn btn-outline-info btn-sm" do %>
        <i class="fas fa-plus me-1"></i>Novo Usuário
      <% end %>
    </div>
  </div>
</div>

<div class="row justify-content-center">
  <div class="col-12 col-lg-10 col-xl-9">
    <div class="card floating-card">
      <div class="card-body p-3" style="max-height: 540px; overflow-y: auto;">
        <% if @users.any? %>
          <div class="table-responsive">
            <table class="table table-sm table-hover mb-0">
              <thead>
                <tr style="font-size: 0.85rem; text-align: center;">
                  <th>Nome</th>
                  <th>Email</th>
                  <th>Login</th>
                  <th>Perfil</th>
                  <th>Revenda</th>
                  <th>Status</th>
                  <th>Ações</th>
                </tr>
              </thead>
              <tbody>
                <% @users.each do |user| %>
                  <tr style="font-size: 0.8rem; text-align: center;">
                    <td><%= user.name %></td>
                    <td><%= user.email %></td>
                    <td><%= user.login %></td>
                    <td>
                      <span class="badge bg-primary" style="font-size: 0.7rem; min-width: 80px;">
                        <%= user.user_profile.name.humanize %>
                      </span>
                    </td>
                    <td><%= user.revenda&.nome_fantasia || 'N/A' %></td>
                    <td>
                      <span class="badge <%= user.active? ? 'bg-success' : 'bg-danger' %>" style="font-size: 0.7rem; min-width: 60px;">
                        <%= user.active? ? 'Ativo' : 'Inativo' %>
                      </span>
                    </td>
                    <td>
                      <div class="d-flex gap-2 justify-content-center">
                        <%= link_to edit_user_path(user), class: "btn btn-outline-warning btn-sm", style: "width: 30px; height: 26px; font-size: 0.8rem; padding: 2px;",
                            title: "Editar usuário", data: { bs_toggle: "tooltip", bs_placement: "top" } do %>
                          <i class="fas fa-edit"></i>
                        <% end %>
                        <%= link_to user_path(user), method: :delete, class: "btn btn-outline-danger btn-sm", style: "width: 30px; height: 26px; font-size: 0.8rem; padding: 2px;",
                            title: "Desativar usuário", data: { bs_toggle: "tooltip", bs_placement: "top", confirm: "Tem certeza que deseja desativar este usuário?" } do %>
                          <i class="fas fa-ban"></i>
                        <% end %>
                      </div>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% else %>
          <div class="text-center text-muted py-3">
            <p class="mb-0">Nenhum usuário encontrado.</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>