<!-- Barra Superior -->
<nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm mb-4">
  <div class="container-fluid">
    <div class="d-flex justify-content-between w-100 align-items-center">
      <!-- Informações do Usuário -->
      <div class="d-flex align-items-center">
        <div class="me-3">
          <i class="fas fa-user-circle fa-2x text-white"></i>
        </div>
        <div class="text-white">
          <div class="fw-bold"><%= @tecnico.name %></div>
          <small class="opacity-75"><%= @revenda.nome_fantasia %></small>
        </div>
      </div>
      
      <!-- Perfil e Logout -->
      <div class="d-flex align-items-center gap-3">
        <span class="badge bg-light text-primary px-3 py-2">
          <%= @tecnico.perfil_acesso.humanize %>
        </span>
        <%= button_to destroy_tecnico_session_path, method: :delete, 
            class: "btn btn-outline-light btn-sm", 
            data: { confirm: "Deseja realmente sair?" },
            form: { style: "display: inline;" } do %>
          <i class="fas fa-sign-out-alt me-1"></i> Sair
        <% end %>
      </div>
    </div>
  </div>
</nav>

<!-- Dashboard Content -->
<div class="container-fluid">
  <div class="row">
    <div class="col-12">
      <h2 class="mb-4 text-primary">
        <i class="fas fa-tachometer-alt me-2"></i>Dashboard Revenda
      </h2>
    </div>
  </div>

  <div class="row g-4">
    <!-- Cartão Revenda -->
    <div class="col-lg-4 col-md-6">
      <div class="card h-100 shadow-sm border-0 card-hover">
        <div class="card-header bg-gradient-primary text-white">
          <h5 class="card-title mb-0">
            <i class="fas fa-building me-2"></i>Revenda
          </h5>
        </div>
        <div class="card-body d-flex flex-column">
          <div class="mb-3 flex-grow-1">
            <h6 class="text-primary"><%= @revenda.nome_fantasia %></h6>
            <p class="text-muted small mb-1">
              <i class="fas fa-id-card me-1"></i>CNPJ: <%= @revenda.cnpj_formatted %>
            </p>
            <p class="text-muted small mb-1">
              <i class="fas fa-map-marker-alt me-1"></i><%= @revenda.cidade %> - <%= @revenda.uf %>
            </p>
            <p class="text-muted small">
              <i class="fas fa-star me-1"></i>Classificação: <%= @revenda.classificacao.humanize %>
            </p>
          </div>
          <div class="d-grid gap-2">
            <%= link_to "#", class: "btn btn-outline-primary btn-sm" do %>
              <i class="fas fa-eye me-1"></i>Visualizar
            <% end %>
            <% if @tecnico.administrador? %>
              <%= link_to "#", class: "btn btn-primary btn-sm" do %>
                <i class="fas fa-edit me-1"></i>Alterar
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <!-- Cartão Técnicos -->
    <div class="col-lg-4 col-md-6">
      <div class="card h-100 shadow-sm border-0 card-hover">
        <div class="card-header bg-gradient-success text-white">
          <h5 class="card-title mb-0">
            <i class="fas fa-users me-2"></i>Técnicos
          </h5>
        </div>
        <div class="card-body d-flex flex-column">
          <div class="mb-3 flex-grow-1">
            <div class="row text-center">
              <div class="col-6">
                <div class="border-end">
                  <h4 class="text-success mb-0"><%= @tecnicos&.count || 0 %></h4>
                  <small class="text-muted">Total</small>
                </div>
              </div>
              <div class="col-6">
                <h4 class="text-primary mb-0"><%= @tecnicos&.where(perfil_acesso: 'administrador')&.count || 0 %></h4>
                <small class="text-muted">Admins</small>
              </div>
            </div>
          </div>
          <div class="d-grid gap-2">
            <%= link_to "#", class: "btn btn-outline-success btn-sm" do %>
              <i class="fas fa-list me-1"></i>Visualizar Lista
            <% end %>
            <% if @tecnico.administrador? %>
              <%= link_to "#", class: "btn btn-success btn-sm" do %>
                <i class="fas fa-plus me-1"></i>Novo Técnico
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <!-- Cartão Relatórios -->
    <div class="col-lg-4 col-md-6">
      <div class="card h-100 shadow-sm border-0 card-hover">
        <div class="card-header bg-gradient-info text-white">
          <h5 class="card-title mb-0">
            <i class="fas fa-chart-bar me-2"></i>Relatórios
          </h5>
        </div>
        <div class="card-body d-flex flex-column">
          <div class="mb-3 flex-grow-1">
            <p class="text-muted">
              <i class="fas fa-download me-2"></i>Extraia informações e relatórios da sua revenda
            </p>
            <ul class="list-unstyled small text-muted">
              <li><i class="fas fa-check text-success me-1"></i>Relatório de Técnicos</li>
              <li><i class="fas fa-check text-success me-1"></i>Dados da Revenda</li>
              <li><i class="fas fa-check text-success me-1"></i>Exportar PDF/Excel</li>
            </ul>
          </div>
          <div class="d-grid gap-2">
            <%= link_to "#", class: "btn btn-outline-info btn-sm" do %>
              <i class="fas fa-file-export me-1"></i>Gerar Relatório
            <% end %>
            <%= link_to "#", class: "btn btn-info btn-sm" do %>
              <i class="fas fa-download me-1"></i>Exportar Dados
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Seção de Atividades Recentes (Opcional) -->
  <div class="row mt-5">
    <div class="col-12">
      <div class="card shadow-sm border-0">
        <div class="card-header bg-light">
          <h6 class="card-title mb-0 text-primary">
            <i class="fas fa-clock me-2"></i>Atividades Recentes
          </h6>
        </div>
        <div class="card-body">
          <div class="text-center text-muted py-4">
            <i class="fas fa-info-circle fa-2x mb-2"></i>
            <p>Nenhuma atividade recente encontrada</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
.bg-gradient-primary {
  background: linear-gradient(45deg, #007bff, #0056b3);
}

.bg-gradient-success {
  background: linear-gradient(45deg, #28a745, #1e7e34);
}

.bg-gradient-info {
  background: linear-gradient(45deg, #17a2b8, #117a8b);
}

.card-hover {
  transition: all 0.3s ease;
}

.card-hover:hover {
  transform: translateY(-5px);
  box-shadow: 0 8px 25px rgba(0,0,0,0.15) !important;
}

.navbar {
  border-bottom: 3px solid rgba(255,255,255,0.1);
}

.btn {
  transition: all 0.2s ease;
}

.btn:hover {
  transform: translateY(-1px);
}

.card {
  border-radius: 12px;
  overflow: hidden;
}

.card-header {
  border: none;
  padding: 1rem 1.25rem;
}

h2.text-primary {
  font-weight: 600;
  letter-spacing: -0.5px;
}
</style>