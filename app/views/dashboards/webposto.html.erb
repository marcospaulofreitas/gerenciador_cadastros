<!-- Notificações Flash -->
<% if flash[:notice] %>
  <div class="alert alert-info" role="alert" style="position: fixed; top: 80px; right: 20px; z-index: 9999; font-size: 0.8rem; padding: 0.5rem; max-width: 300px;">
    <%= flash[:notice] %>
  </div>
<% end %>

<% if flash[:alert] %>
  <div class="alert alert-danger" role="alert" style="position: fixed; top: 80px; right: 20px; z-index: 9999; font-size: 0.8rem; padding: 0.5rem; max-width: 300px;">
    <%= flash[:alert] %>
  </div>
<% end %>

<% if flash[:info] %>
  <div class="alert alert-info" role="alert" style="position: fixed; top: 80px; right: 20px; z-index: 9999; font-size: 0.8rem; padding: 0.5rem; max-width: 300px;">
    <%= flash[:info] %>
  </div>
<% end %>

