<!-- Filtros de Auditoria -->
<div class="row mt-5">
  <div class="col-12">
    <div class="card floating-card">
      <div class="card-header bg-primary text-white">
        <h5 class="mb-0"><i class="fas fa-filter me-2"></i>Filtros de Auditoria</h5>
      </div>
      <div class="card-body">
        <%= form_with url: webposto_dashboard_path, method: :get, local: true, class: "row g-3" do |f| %>
          <div class="col-md-3">
            <%= f.label :user_id, "Usuário", class: "form-label" %>
            <%= f.select :user_id, options_from_collection_for_select(User.active.order(:name), :id, :name, params[:user_id]), 
                { prompt: "Todos os usuários" }, { class: "form-select" } %>
          </div>
          
          <div class="col-md-3">
            <%= f.label :auditable_type, "Tipo de Registro", class: "form-label" %>
            <%= f.select :auditable_type, options_for_select([
              ['Todos', ''],
              ['Usuários', 'User'],
              ['Revendas', 'Revenda'],
              ['Técnicos', 'Tecnico']
            ], params[:auditable_type]), {}, { class: "form-select" } %>
          </div>
          
          <div class="col-md-2">
            <%= f.label :action, "Ação", class: "form-label" %>
            <%= f.select :action, options_for_select([
              ['Todas', ''],
              ['Criação', 'create'],
              ['Atualização', 'update'],
              ['Inativação', 'destroy']
            ], params[:action]), {}, { class: "form-select" } %>
          </div>
          
          <div class="col-md-2">
            <%= f.label :date_from, "Data Inicial", class: "form-label" %>
            <%= f.date_field :date_from, value: params[:date_from], class: "form-control" %>
          </div>
          
          <div class="col-md-2">
            <%= f.label :date_to, "Data Final", class: "form-label" %>
            <%= f.date_field :date_to, value: params[:date_to], class: "form-control" %>
          </div>
          
          <div class="col-12">
            <div class="d-flex gap-2">
              <%= f.submit "Filtrar", class: "btn btn-primary" %>
              <%= link_to "Limpar", webposto_dashboard_path, class: "btn btn-outline-secondary" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- Atividades Recentes -->
<div class="row mt-4">
  <div class="col-12">
    <div class="card floating-card">
      <div class="card-header bg-primary text-white">
        <h5 class="mb-0"><i class="fas fa-history me-2"></i>Atividades Recentes</h5>
      </div>
      <div class="card-body">
        <% if @recent_audits&.any? %>
          <div class="table-responsive">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th>Usuário</th>
                  <th>Ação</th>
                  <th>Item</th>
                  <th>Alterações</th>
                  <th>Status</th>
                  <th>Data/Hora</th>
                </tr>
              </thead>
              <tbody>
                <% @recent_audits.each do |audit| %>
                  <tr>
                    <td><small><%= audit.performer_name %></small></td>
                    <td>
                      <span class="badge bg-<%= audit.action == 'create' ? 'success' : audit.action == 'update' ? 'warning' : 'danger' %>">
                        <%= audit.action_description %>
                      </span>
                    </td>
                    <td><small><%= audit.auditable_type %> #<%= audit.auditable_id %></small></td>
                    <td><small><%= truncate(audit.changes_summary, length: 50) %></small></td>
                    <td>
                      <% if audit.feito_por_tecnico? %>
                        <span class="badge bg-<%= audit.aprovado? ? 'success' : 'warning' %>">
                          <%= audit.aprovado? ? 'Aprovado' : 'Pendente' %>
                        </span>
                      <% else %>
                        <span class="badge bg-primary">Auto-aprovado</span>
                      <% end %>
                    </td>
                    <td><small><%= audit.created_at.strftime("%d/%m/%Y %H:%M") %></small></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% else %>
          <div class="text-center text-muted py-4">
            <i class="fas fa-inbox fa-3x mb-3"></i>
            <p>Nenhuma atividade recente encontrada</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script>
// Auto-hide alerts após 4 segundos
document.addEventListener('DOMContentLoaded', function() {
  const alerts = document.querySelectorAll('.alert');
  alerts.forEach(function(alert) {
    setTimeout(function() {
      if (alert && alert.parentNode) {
        alert.style.transition = 'opacity 0.5s';
        alert.style.opacity = '0';
        setTimeout(function() {
          if (alert.parentNode) {
            alert.parentNode.removeChild(alert);
          }
        }, 500);
      }
    }, 4000);
  });
});
</script>