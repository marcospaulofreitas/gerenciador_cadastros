<!-- Menu Superior -->
<nav class="navbar navbar-expand-lg top-navbar">
  <div class="container-fluid">
    <span class="navbar-brand mb-0 h1 text-primary fw-bold">Dashboard webPosto</span>
    <div class="navbar-nav ms-auto">
      <%= link_to revendas_path, class: "nav-link" do %>
        <i class="fas fa-store me-1"></i>Revendas
      <% end %>
      <%= link_to "#", class: "nav-link" do %>
        <i class="fas fa-tools me-1"></i>Técnicos
      <% end %>
      <%= link_to users_path, class: "nav-link" do %>
        <i class="fas fa-users me-1"></i>Usuários
      <% end %>
      <%= link_to "#", class: "nav-link" do %>
        <i class="fas fa-chart-bar me-1"></i>Relatórios
      <% end %>
    </div>
  </div>
</nav>

<!-- Cartões Flutuantes -->
<div class="row g-4">
  <!-- Cartão Revendas -->
  <div class="col-lg-3 col-md-6">
    <div class="card h-100 floating-card card-hover">
      <div class="card-body text-center p-4">
        <div class="card-icon mb-3">
          <i class="fas fa-store fa-3x text-primary"></i>
        </div>
        <h5 class="card-title fw-bold mb-2">Revendas</h5>
        <p class="card-text text-muted mb-4"><span class="fw-bold text-primary"><%= @revendas_count %></span> cadastradas</p>
        <div class="d-grid gap-2">
          <%= link_to revendas_path, class: "btn btn-primary" do %>
            <i class="fas fa-cog me-1"></i>Gerenciar
          <% end %>
          <%= link_to new_revenda_path, class: "btn btn-outline-primary" do %>
            <i class="fas fa-plus me-1"></i>Nova +
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Cartão Técnicos -->
  <div class="col-lg-3 col-md-6">
    <div class="card h-100 floating-card card-hover">
      <div class="card-body text-center p-4">
        <div class="card-icon mb-3">
          <i class="fas fa-tools fa-3x text-success"></i>
        </div>
        <h5 class="card-title fw-bold mb-2">Técnicos</h5>
        <p class="card-text text-muted mb-4"><span class="fw-bold text-success"><%= @tecnicos_count %></span> ativos</p>
        <div class="d-grid gap-2">
          <%= link_to "#", class: "btn btn-success" do %>
            <i class="fas fa-cog me-1"></i>Gerenciar
          <% end %>
          <%= link_to "#", class: "btn btn-outline-success" do %>
            <i class="fas fa-plus me-1"></i>Novo +
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Cartão Usuários -->
  <div class="col-lg-3 col-md-6">
    <div class="card h-100 floating-card card-hover">
      <div class="card-body text-center p-4">
        <div class="card-icon mb-3">
          <i class="fas fa-users fa-3x text-info"></i>
        </div>
        <h5 class="card-title fw-bold mb-2">Usuários</h5>
        <p class="card-text text-muted mb-4"><span class="fw-bold text-info"><%= @users_count %></span> registrados</p>
        <div class="d-grid gap-2">
          <%= link_to users_path, class: "btn btn-info" do %>
            <i class="fas fa-cog me-1"></i>Gerenciar
          <% end %>
          <%= link_to new_user_path, class: "btn btn-outline-info" do %>
            <i class="fas fa-plus me-1"></i>Novo +
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Cartão Relatórios -->
  <div class="col-lg-3 col-md-6">
    <div class="card h-100 floating-card card-hover">
      <div class="card-body text-center p-4">
        <div class="card-icon mb-3">
          <i class="fas fa-chart-bar fa-3x text-warning"></i>
        </div>
        <h5 class="card-title fw-bold mb-2">Relatórios</h5>
        <p class="card-text text-muted mb-4">Extrair dados do sistema</p>
        <div class="d-grid gap-2">
          <%= link_to "#", class: "btn btn-warning" do %>
            <i class="fas fa-file-alt me-1"></i>Gerar Relatório
          <% end %>
          <%= link_to "#", class: "btn btn-outline-warning" do %>
            <i class="fas fa-download me-1"></i>Exportar Dados
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Estatísticas Rápidas -->
<div class="row mt-5">
  <div class="col-12">
    <div class="card stats-card floating-card">
      <div class="card-header">
        <h5 class="mb-0 text-white"><i class="fas fa-tachometer-alt me-2"></i>Visão Geral do Sistema</h5>
      </div>
      <div class="card-body">
        <div class="row text-center">
          <div class="col-md-3">
            <div class="stat-item">
              <h3 class="text-white"><%= @revendas_count %></h3>
              <p class="text-white-50">Total de Revendas</p>
            </div>
          </div>
          <div class="col-md-3">
            <div class="stat-item">
              <h3 class="text-white"><%= @tecnicos_count %></h3>
              <p class="text-white-50">Técnicos Cadastrados</p>
            </div>
          </div>
          <div class="col-md-3">
            <div class="stat-item">
              <h3 class="text-white"><%= @users_count %></h3>
              <p class="text-white-50">Usuários Ativos</p>
            </div>
          </div>
          <div class="col-md-3">
            <div class="stat-item">
              <h3 class="text-white">100%</h3>
              <p class="text-white-50">Sistema Online</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>