<!-- Atividades Recentes -->
<div class="row mt-4">
  <div class="col-12">
    <div class="card floating-card">
      <div class="card-header bg-primary text-white">
        <h5 class="mb-0"><i class="fas fa-history me-2"></i>Atividades Recentes</h5>
      </div>
      <div class="card-body">
        <% if @recent_audits.any? %>
          <div class="table-responsive">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th>Usuário</th>
                  <th>Ação</th>
                  <th>Item</th>
                  <th>Alterações</th>
                  <th>Data/Hora</th>
                </tr>
              </thead>
              <tbody>
                <% @recent_audits.each do |audit| %>
                  <tr>
                    <td><small><%= audit.performer_name %></small></td>
                    <td>
                      <span class="badge bg-<%= audit.action == 'create' ? 'success' : audit.action == 'update' ? 'warning' : 'danger' %>">
                        <%= audit.action_description %>
                      </span>
                    </td>
                    <td><small><%= audit.auditable_type %> #<%= audit.auditable_id %></small></td>
                    <td><small><%= truncate(audit.changes_summary, length: 50) %></small></td>
                    <td><small><%= audit.created_at.strftime("%d/%m/%Y %H:%M") %></small></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% else %>
          <div class="text-center text-muted py-4">
            <i class="fas fa-inbox fa-3x mb-3"></i>
            <p>Nenhuma atividade recente encontrada</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script>
// Auto-hide alerts após 4 segundos
document.addEventListener('DOMContentLoaded', function() {
  const alerts = document.querySelectorAll('.alert');
  alerts.forEach(function(alert) {
    setTimeout(function() {
      if (alert && alert.parentNode) {
        alert.style.transition = 'opacity 0.5s';
        alert.style.opacity = '0';
        setTimeout(function() {
          if (alert.parentNode) {
            alert.parentNode.removeChild(alert);
          }
        }, 500);
      }
    }, 4000);
  });
});
</script>