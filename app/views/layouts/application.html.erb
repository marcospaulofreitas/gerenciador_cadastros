<!DOCTYPE html>
<html>
  <head>
    <title>Gerenciador de Cadastros</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  <%= stylesheet_link_tag "dashboard", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <% if user_signed_in? && controller_name != 'home' %>
      <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
          <%= link_to "Gerenciador", root_path, class: "navbar-brand" %>
          
          <div class="navbar-nav ms-auto">
            <span class="navbar-text me-3">Olá, <%= current_user.name %></span>
            <%= form_with url: destroy_user_session_path, method: :delete, local: true, class: "d-inline" do |f| %>
              <%= f.submit "Sair", class: "btn btn-outline-light btn-sm" %>
            <% end %>
          </div>
        </div>
      </nav>
    <% end %>

    <!-- Notificações Flutuantes -->


    <div class="container mt-4">
      <%= yield %>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
      // Auto-inicializar toasts
      document.addEventListener('DOMContentLoaded', function() {
        var toastElList = [].slice.call(document.querySelectorAll('.toast'));
        var toastList = toastElList.map(function(toastEl) {
          var toast = new bootstrap.Toast(toastEl);
          if (!toastEl.classList.contains('show')) {
            toast.show();
          }
          return toast;
        });
      });
    </script>
  </body>
</html>