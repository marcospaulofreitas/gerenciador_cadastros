<!DOCTYPE html>
<html>
  <head>
    <title>Gerenciador de Cadastros</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "dashboard", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "responsive", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <% if user_signed_in? && controller_name != 'home' %>
      <nav class="navbar navbar-expand-sm navbar-dark bg-primary">
        <div class="container">
          <%= link_to "Gerenciador", root_path, class: "navbar-brand" %>
          
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
          </button>
          
          <div class="collapse navbar-collapse" id="navbarNav">
            <div class="navbar-nav ms-auto">
              <span class="navbar-text me-2 d-none d-sm-inline">Olá, <%= current_user.name %></span>
              <span class="navbar-text me-2 d-sm-none"><%= current_user.name.split.first %></span>
              <%= form_with url: destroy_user_session_path, method: :delete, local: true, class: "d-inline" do |f| %>
                <%= f.submit "Sair", class: "btn btn-outline-light btn-sm" %>
              <% end %>
            </div>
          </div>
        </div>
      </nav>
    <% end %>

    <!-- Notificações Flutuantes -->


    <div class="container mt-4 mb-4">
      <%= yield %>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js"></script>
    <script>
      // Auto-inicializar toasts
      document.addEventListener('DOMContentLoaded', function() {
        var toastElList = [].slice.call(document.querySelectorAll('.toast'));
        var toastList = toastElList.map(function(toastEl) {
          var toast = new bootstrap.Toast(toastEl);
          if (!toastEl.classList.contains('show')) {
            toast.show();
          }
          return toast;
        });
        
        // Auto-hide flash messages
        setTimeout(function() {
          $('.alert').fadeOut(500);
        }, 3000);
        
        // Inicializar tooltips
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
          return new bootstrap.Tooltip(tooltipTriggerEl, {
            trigger: 'hover focus',
            delay: { show: 500, hide: 100 }
          });
        });
      });
      
      // Para compatibilidade com Turbo
      document.addEventListener('turbo:load', function() {
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
          return new bootstrap.Tooltip(tooltipTriggerEl, {
            trigger: 'hover focus',
            delay: { show: 500, hide: 100 }
          });
        });
        
        // Aplicar máscaras
        initMasks();
        
        // Auto-hide flash messages
        setTimeout(function() {
          $('.alert').fadeOut(500);
        }, 3000);
      });
      
      function initMasks() {
        // Máscara CNPJ
        $('.cnpj-mask').mask('00.000.000/0000-00');
        
        // Máscara CEP
        $('.cep-mask').mask('00000-000');
        
        // Consulta CEP
        $('.cep-mask').on('blur', function() {
          var cep = $(this).val().replace(/\D/g, '');
          if (cep.length === 8) {
            consultarCEP(cep);
          }
        });
        
        // Aplicar máscara inicial no telefone se já tiver tipo selecionado
        var tipoContato = $('select[name*="tipo_contato"]').val();
        if (tipoContato) {
          updatePhoneMask(tipoContato);
        }
      }
      
      function consultarCEP(cep) {
        $.getJSON('https://viacep.com.br/ws/' + cep + '/json/', function(data) {
          if (!data.erro) {
            $('[name*="logradouro"]').val(data.logradouro);
            $('[name*="bairro"]').val(data.bairro);
            $('[name*="cidade"]').val(data.localidade);
            $('[name*="uf"]').val(data.uf);
          }
        });
      }
      
      function updatePhoneMask(tipo) {
        var phoneField = $('#telefone_suporte');
        phoneField.unmask();
        
        switch(tipo) {
          case 'celular':
            phoneField.mask('(00) 00000-0000');
            break;
          case 'fixo':
            phoneField.mask('(00) 0000-0000');
            break;
          case '0800':
            phoneField.mask('0000-000-0000');
            break;
        }
      }
    </script>
  </body>
</html>