<div class="mb-2">
  <%= link_to revendas_path, class: "btn btn-outline-secondary btn-sm" do %>
    <i class="fas fa-arrow-left me-1"></i>Voltar
  <% end %>
</div>
<div class="d-flex justify-content-between align-items-center mb-3">
  <h3 class="text-primary mb-0">
    <i class="fas fa-users me-2"></i>Técnicos - <%= @revenda.nome_fantasia %>
  </h3>
  <div>
    <%= link_to new_revenda_tecnico_path(@revenda), class: "btn btn-success" do %>
      <i class="fas fa-plus me-1"></i>Novo Técnico
    <% end %>
  </div>
</div>

<div class="card floating-card">
  <div class="card-body">
    <% if @tecnicos.any? %>
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Nome</th>
              <th>Email</th>
              <th>Telefone</th>
              <th>Função</th>
              <th>Perfil</th>
              <th>Especialista</th>
              <th>Status</th>
              <th>Ações</th>
            </tr>
          </thead>
          <tbody>
            <% @tecnicos.each do |tecnico| %>
              <tr>
                <td><strong><%= tecnico.name %></strong></td>
                <td><%= tecnico.email %></td>
                <td><%= tecnico.telefone %></td>
                <td><%= tecnico.funcao_humanized %></td>
                <td>
                  <span class="badge bg-<%= tecnico.administrador? ? 'primary' : 'secondary' %>">
                    <%= tecnico.perfil_acesso.humanize %>
                  </span>
                </td>
                <td>
                  <% if tecnico.especialista? %>
                    <i class="fas fa-star text-warning"></i>
                  <% else %>
                    <i class="fas fa-star text-muted"></i>
                  <% end %>
                </td>
                <td>
                  <span class="badge bg-<%= tecnico.active? ? 'success' : 'danger' %>">
                    <%= tecnico.active? ? 'Ativo' : 'Inativo' %>
                  </span>
                </td>
                <td>
                  <div class="d-flex gap-1">
                    <%= link_to revenda_tecnico_path(@revenda, tecnico), class: "btn btn-outline-info btn-sm" do %>
                      <i class="fas fa-eye"></i>
                    <% end %>
                    <%= link_to edit_revenda_tecnico_path(@revenda, tecnico), class: "btn btn-outline-primary btn-sm" do %>
                      <i class="fas fa-edit"></i>
                    <% end %>
                    <%= link_to revenda_tecnico_path(@revenda, tecnico), method: :delete, 
                        class: "btn btn-outline-danger btn-sm", 
                        data: { confirm: "Tem certeza que deseja inativar este técnico?" } do %>
                      <i class="fas fa-trash"></i>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="text-center text-muted py-5">
        <i class="fas fa-users fa-3x mb-3"></i>
        <h4>Nenhum técnico cadastrado</h4>
        <p>Clique em "Novo Técnico" para adicionar o primeiro técnico desta revenda.</p>
      </div>
    <% end %>
  </div>
</div>